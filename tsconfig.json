{
    "compilerOptions":
    {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "src/",
        "paths":
        {
            "bitquran/assets": ["assets"],
            "bitquran/icons": ["assets/icons"],
            "bitquran/images": ["assets/images"],
            "bitquran/styles/*": ["assets/css/*"],
            "bitquran/components": ["components"],
            "bitquran/services/api": ["services/api"],
            "bitquran/services/slices": ["services/slices"],
            "bitquran/services/store": ["services/store"],
            "bitquran/services/*": ["services/*"],
            "bitquran/shared/constants": ["shared/constants"],
            "bitquran/shared/hooks": ["shared/hooks"],
            "bitquran/shared/types": ["shared/types"],
            "bitquran/shared/utils": ["shared/utils"],
            "bitquran/package": ["../package.json"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
